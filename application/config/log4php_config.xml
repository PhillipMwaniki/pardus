        </layout>
        <param name="file" value="../logs/query_report_%s.log"/>
        <param name="datePattern" value="Ymd" />
    </appender>
	<appender name="default" class="LoggerAppenderDailyFile">
		<layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date{Y-m-d H:i:s,u}|%level|%logger|%msg%n%exception" />
        </layout>
        <param name="file" value="../logs/main_%s.log"/>
        <param name="datePattern" value="Ymd" />
    </appender>
	
    <logger name="delivery">
        <level value="info" />
        <appender_ref ref="delivery" />
    </logger>
    <logger name="notify">
		<level value="info" />
        <appender_ref ref="notify" />
    </logger>
	<logger name="send">
		<level value="info" />
        <appender_ref ref="send" />
    </logger>
	<logger name="service">
		<level value="info" />
        <appender_ref ref="service" />
    </logger>
	<logger name="subscription">
		<level value="info" />
        <appender_ref ref="subscription" />
    </logger>
	<logger name="test">
		<level value="info" />
        <appender_ref ref="test" />
    </logger>
	<logger name="messages">
		<level value="info" />
        <appender_ref ref="messages" />
    </logger>
	<logger name="reports">
		<level value="info" />
        <appender_ref ref="reports" />
    </logger>
	<logger name="default">
